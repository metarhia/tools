{
  "name": "@metarhia/tools",
  "version": "0.0.0",
  "description": "Metarhia development tools",
  "main": "tools.js",
  "scripts": {
    "lint": "eslint . && remark . && prettier --list-different \"**/*.js\" \"**/*.json\" \"**/*.md\" .eslintrc .prettierrc .remarkrc .huskyrc",
    "fmt": "prettier --write \"**/*.js\" \"**/*.json\" \"**/*.md\" .eslintrc .prettierrc .remarkrc .huskyrc",
    "test": "npm run -s lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/metarhia/tools.git"
  },
  "keywords": [
    "metarhia",
    "devtools",
    "tooling"
  ],
  "author": "Mykola Bilochub <nbelochub@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/metarhia/tools/issues"
  },
  "homepage": "https://github.com/metarhia/tools#readme",
  "devDependencies": {
    "@commitlint/cli": "^7.3.2",
    "@commitlint/config-conventional": "^7.3.1",
    "eslint": "^5.12.0",
    "eslint-config-metarhia": "^6.1.0",
    "eslint-config-prettier": "^3.5.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "prettier": "^1.15.3",
    "remark-cli": "^6.0.1",
    "remark-preset-lint-metarhia": "^1.0.4",
    "remark-validate-links": "^8.0.0"
  }
}
